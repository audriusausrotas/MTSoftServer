{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node",
    "types": ["node", "express"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
